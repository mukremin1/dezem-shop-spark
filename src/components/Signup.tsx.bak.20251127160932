import React, { useState } from "react";
import { supabase } from "@/integrations/supabase/client";
import { useNavigate } from "react-router-dom";

export default function Signup() {
  const [email, setEmail] = useState("");
  const [fullName, setFullName] = useState("");
  const [phone, setPhone] = useState("");
  const [password, setPassword] = useState("");
  const [confirmPassword, setConfirmPassword] = useState("");
  const [loading, setLoading] = useState(false);
  const [message, setMessage] = useState<string | null>(null);
  const [messageType, setMessageType] = useState<"error" | "success" | null>(null);
  const navigate = useNavigate();

  const validate = () => {
    if (!email) {
      setMessage("E‑posta giriniz.");
      setMessageType("error");
      return false;
    }
    if (fullName.trim().length < 3) {
      setMessage("Ad ve soyad en az 3 karakter olmalıdır.");
      setMessageType("error");
      return false;
    }
    if (!password || password.length < 6) {
      setMessage("En az 6 karakterli bir şifre giriniz.");
      setMessageType("error");
      return false;
    }
    if (password !== confirmPassword) {
      setMessage("Şifre ve doğrulama eşleşmiyor.");
      setMessageType("error");
      return false;
    }
    return true;
  };

  async function handleSignup(e: React.FormEvent) {
    e.preventDefault();
    setMessage(null);
    setMessageType(null);

    if (!validate()) return;

    setLoading(true);
    try {
      // Supabase v2: signUp with metadata in options
      const { data, error } = await supabase.auth.signUp(
        { email, password },
        { data: { full_name: fullName || null, phone: phone || null } } as any
      );

      if (error) {
        setMessage(error.message);
        setMessageType("error");
      } else {
        setMessage("Kayıt başarılı. E‑postanızı kontrol edip onaylayın.");
        setMessageType("success");
        setTimeout(() => navigate("/login"), 1400);
      }
    } catch (err: any) {
      setMessage(err?.message || "Kayıt sırasında hata oluştu.");
      setMessageType("error");
    } finally {
      setLoading(false);
    }
  }

  const inputBaseClasses =
    "mt-1 block w-full rounded-md border border-gray-200 px-3 py-2 text-sm placeholder-gray-400 transition-shadow focus:outline-none";
  const inputFocusStyle = "focus:border-orange-500 focus:ring-2 focus:ring-orange-200";

  return (
    <div className="min-h-[60vh] flex items-center justify-center p-6">
      <div
        role="region"
        aria-label="Kayıt formu"
        className="w-full max-w-md bg-white rounded-lg shadow-lg overflow-hidden"
        style={{ borderTop: "4px solid #ff6a00" }}
      >
        <div className="p-6">
          <h2 className="text-2xl font-semibold mb-2" style={{ color: "#333" }}>
            Kayıt Ol
          </h2>
          <p className="text-sm text-gray-600 mb-4">Hesap oluşturmak için bilgilerinizi girin.</p>

          <form onSubmit={handleSignup} aria-label="signup form" className="space-y-4">
            <label className="block text-sm">
              <span className="text-gray-700">Ad / Soyad</span>
              <input
                value={fullName}
                onChange={(e) => setFullName(e.target.value)}
                type="text"
                required
                placeholder="Ör. Ahmet Yılmaz"
                className={`${inputBaseClasses} ${inputFocusStyle}`}
                aria-required="true"
              />
            </label>

            <label className="block text-sm">
              <span className="text-gray-700">E‑posta</span>
              <input
                value={email}
                onChange={(e) => setEmail(e.target.value)}
                type="email"
                required
                placeholder="you@example.com"
                className={`${inputBaseClasses} ${inputFocusStyle}`}
                aria-required="true"
                data-testid="signup-email"
              />
            </label>

            <label className="block text-sm">
              <span className="text-gray-700">Telefon (opsiyonel)</span>
              <input
                value={phone}
                onChange={(e) => setPhone(e.target.value)}
                type="tel"
                placeholder="+90 5xx xxx xx xx"
                inputMode="tel"
                pattern="[\d\s()+-]+"
                className={`${inputBaseClasses} ${inputFocusStyle}`}
                aria-label="Telefon numarası (opsiyonel)"
                data-testid="signup-phone"
              />
            </label>

            <label className="block text-sm">
              <span className="text-gray-700">Şifre</span>
              <input
                value={password}
                onChange={(e) => setPassword(e.target.value)}
                type="password"
                required
                placeholder="En az 6 karakter"
                className={`${inputBaseClasses} ${inputFocusStyle}`}
                aria-required="true"
                data-testid="signup-password"
              />
            </label>

            <label className="block text-sm">
              <span className="text-gray-700">Şifre (Doğrulama)</span>
              <input
                value={confirmPassword}
                onChange={(e) => setConfirmPassword(e.target.value)}
                type="password"
                required
                placeholder="Şifreyi tekrar girin"
                className={`${inputBaseClasses} ${inputFocusStyle}`}
                aria-required="true"
                data-testid="signup-confirm-password"
              />
            </label>

            <button
              type="submit"
              disabled={loading}
              aria-busy={loading}
              className={`w-full inline-flex items-center justify-center px-4 py-2 rounded-md text-white font-medium
                ${loading ? "bg-orange-300 cursor-not-allowed" : "bg-[#ff6a00] hover:bg-[#ff7f21]"} 
                focus:outline-none focus:ring-2 focus:ring-orange-300`}
            >
              {loading ? "Kayıt yapılıyor..." : "Kayıt Ol"}
            </button>
          </form>

          {message && (
            <p
              className={`mt-4 text-sm ${
                messageType === "success" ? "text-amber-800 bg-amber-50 p-2 rounded" : ""
              } ${messageType === "error" ? "text-red-700 bg-red-50 p-2 rounded" : ""}`}
              role={messageType === "error" ? "alert" : "status"}
            >
              {message}
            </p>
          )}
        </div>

        <div className="bg-[#fff6ef] px-6 py-3 text-xs text-[#7a3f00] border-t border-gray-100 flex items-center justify-between">
          <div>
            <span>Zaten hesabınız var mı? </span>
            <a href="/login" className="font-medium underline" style={{ color: "#ff6a00" }}>
              Giriş Yap
            </a>
          </div>
          <div className="text-right text-gray-600">
            <small>Şifre en az 6 karakter olmalıdır</small>
          </div>
        </div>
      </div>
    </div>
  );
}
